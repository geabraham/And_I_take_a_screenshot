.panel.panel-default.center-block.col-md-10.pull-none.light-grey-border
  %h3.form_header="Add a patient to #{@study_site_name}."
  %hr
  = form_for 'patient_enrollment', url: {action: 'invite', study_uuid: @study_uuid, study_site_uuid: @study_site_uuid}, html: {id: 'invite-form', class: 'form-inline margin-bottom-thirty'} do |f|
    .form-group
      = f.select :subject, @available_subjects, {include_blank: @available_subjects.present? ? 'Subject' : 'No subjects available'}, {class: 'form-control'}
    .form-group
      = f.label :country_language, 'Country / Language', {class: 'invisible'}
      = f.select :country_language, @tou_dpn_agreements, {include_blank: 'Country / Language'}, {class: 'form-control'}
    .form-group
      = f.label :email, 'Subject email'
      = f.email_field :email, {class: 'form-control'}
    .form-group
      = f.label :initials, 'Subject initials'
      = f.text_field :initials, {class: 'form-control'}
    .form-group
      = f.label :submit, {class: 'invisible'}
      = f.submit 'Invite', id: 'invite-button', class: 'btn btn-primary', disabled: true
