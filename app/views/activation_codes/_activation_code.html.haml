  %input.code#1{:maxlength => 1}
  %input.code#2{:maxlength => 1}
  %input.code#3{:maxlength => 1}
  %input.code#4{:maxlength => 1}
  %input.code#5{:maxlength => 1}
  %input.code#6{:maxlength => 1}
