- content_for :page_body do
  .top
    %span.center
      =image_tag 'Medidata_Logo_white_RGB_2.png'
    %span.forward='?'
  %br
  
  = form_tag @patient_enrollment, id: 'reg-form'
  .carousel.slide#registration-details(data-interval="false")
    .carousel-inner(role="listbox")
      .item.active#email
        = render 'email_form'
      .item#password
        = render 'password_form'
      .item#security_question
        = render 'security_question_form'
  .next
    %a.btn.btn-primary#next-button(href="#registration-details" role="button")='Next'
    .submit#submit-button
      = fields_for @patient_enrollment do |f|
        = f.submit 'Create account', class: 'btn btn-primary', disabled: true, id: 'create-account'
  .bottom
    %span.back
      %a='<'
    %span.center
    %span.forward='>'
