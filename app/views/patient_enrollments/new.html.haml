- content_for :page_body do
  .header
    =image_tag 'Medidata_Logo_white_RGB_2.png'
    %span.help.pull-right
      %i.fa.fa-question-circle
  
  = form_tag @patient_enrollment, id: 'reg-form'
  .carousel.slide#registration-details(data-interval="false")
    .carousel-inner(role="listbox")
      .item.active#email
        = render 'email_form'
      .item#password
        = render 'password_form'
      .item#security_question
        = render 'security_question_form'
  .next
    %a.btn.btn-primary.btn-block#next-button(href="#registration-details" role="button")='Next'
    .submit#submit-button
      = fields_for @patient_enrollment do |f|
        = f.submit 'Create account', class: 'btn btn-primary btn-block hidden', disabled: true, id: 'create-account'
  .footer
    %a.back_arrow{:href => ""}
      %i.fa.fa-angle-left
      %span.sr-only='Back'
    %span.forward_arrow
      %i.fa.fa-angle-right
      %span.sr-only= 'Forward'
