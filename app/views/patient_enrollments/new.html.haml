- content_for :page_body do
  .top
    %span.center='medidata'
    %span.forward='?'
  %br
  
  %h2.registration_details='Registration Details'
  
  .instruction
    ='Enter and confirm your'
    %strong='email address'
    ='in the username field.'
  
  /.hide
  .form-content
    = form_tag @patient_enrollment
    .email
      = fields_for @patient_enrollment do |f|
        = f.label :login, 'E-mail Address'
        %br
        = f.text_field :login
        %br
      
        = f.label :login_confirmation, 'Confirm E-mail Address'
        %br
        = f.text_field :login_confirmation
        %br
    .password.hide
      = fields_for @patient_enrollment do |f|
        = f.label :password
        %br
        = f.password_field :password
        %br
        
        = f.label :password_confirmation, 'Confirm Password'
        %br
        = f.password_field :password_confirmation
        %br
    .security_question.hide
      =fields_for @patient_enrollment do |f|
        = f.label :security_question, 'Security Question'
        %br
        = f.select :security_question, @security_questions, include_blank: true
        %br
        
        = f.label :answer
        %br
        = f.text_field :answer
        %br
      
        = f.submit 'Submit'
    
    .next
      %button.btn.btn-primary='Next'
    .bottom
      %span.back
        %a='<'
      %span.center
      %span.forward='>'