%h3.form_header
  = t("registration.email_form.email_label")
%p.form_instruction
  = t("registration.email_form.form_instruction")

= fields_for @patient_enrollment do |f|
  .form-group
    = f.label :login, t("registration.email_form.email_label")
    = f.email_field :login, class: 'registration-input form-control'
  .form-group
    = f.label :login_confirmation, t("registration.email_form.reenter_label")
    = f.email_field :login_confirmation, class: 'registration-input form-control'
.validation_error.invisible
